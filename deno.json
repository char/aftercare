{
  "name": "@char/aftercare",
  "version": "0.5.8",
  "license": "WTFPL",
  "tasks": {
    "build-example": "deno run -A ./lib/bundle.ts -i ./example/main.tsx -o ./example/dist"
  },
  "exports": {
    ".": "./lib/mod.ts",
    "./bundle": "./lib/bundle.ts",
    "./jsx-runtime": "./lib/jsx.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "@char/aftercare"
  },
  "publish": {
    "include": ["lib/", "README.md"]
  },
  "lint": {
    "rules": {
      "exclude": ["ban-types", "no-explicit-any", "no-import-prefix"]
    }
  },
  "lock": false
}
